{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/we-promise/sure-cli/docs/schemas/v1/insights_subscriptions.schema.json",
  "title": "sure-cli insights subscriptions v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "window": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "start": {"type": "string"},
        "end": {"type": "string"}
      },
      "required": ["start", "end"]
    },
    "candidates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "count": {"type": "integer"},
          "avg_amount": {"type": "number"},
          "avg_period_days": {"type": "number"},
          "stddev_days": {"type": "number"},
          "last_date": {"type": "string"},
          "sample_tx_ids": {"type": "array", "items": {"type": "string"}},
          "classification": {"type": "string"},
          "confidence": {"type": "number", "minimum": 0, "maximum": 1},
          "reason": {"type": "string"},
          "suggested_action": {"type": "string"}
        },
        "required": ["name", "count", "avg_amount", "confidence"]
      }
    }
  },
  "required": ["window", "candidates"]
}
