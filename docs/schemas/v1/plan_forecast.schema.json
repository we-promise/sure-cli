{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/we-promise/sure-cli/docs/schemas/v1/plan_forecast.schema.json",
  "title": "sure-cli plan forecast v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "summary": {
      "type": "object",
      "properties": {
        "days": {"type": "integer", "minimum": 1},
        "recurring_expenses": {"type": "number", "minimum": 0},
        "avg_daily_spend": {"type": "number", "minimum": 0},
        "projected_spend": {"type": "number", "minimum": 0},
        "currency": {"type": "string"},
        "assumptions": {"type": "array", "items": {"type": "string"}}
      },
      "required": ["days", "recurring_expenses", "avg_daily_spend", "projected_spend", "currency"]
    },
    "daily": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {"type": "string"},
          "expected_spend": {"type": "number"},
          "cumulative_spend": {"type": "number"},
          "recurring_items": {"type": "array", "items": {"type": "string"}}
        },
        "required": ["date", "expected_spend", "cumulative_spend"]
      }
    }
  },
  "required": ["summary"]
}
